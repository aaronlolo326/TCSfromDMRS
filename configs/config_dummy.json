{
    "name": "TCS_dummy",
    "n_gpu": 1,
    "data_info_dir": "data/dummy_data/info",
    "encoder_arch": {
        "type": "BSGEncoder",
        "args": {
            "hidden_act_func": "ReLU",
            "input_dim": 64,
            "hidden_dim": 64,
            "mu_dim": 64,
            "sigma_dim": 1
        }
    },
    "one_place_decoder_arch": {
        "type": "OnePlaceDecoder",
        "args": {
            "input_dim": 64,
            "hidden_dim": 32,
            "hidden_act_func": "Tanh",
            "output_act_func": "Sigmoid"
        }
    },
    "two_place_decoder_arch": {
        "type": "TwoPlaceDecoder",
        "args": {
            "input_dim": 128,
            "hidden_dim": 64,
            "hidden_act_func": "Tanh",
            "output_act_func": "Sigmoid"
        }
    },
    "data_loader": {
        "type": "DmrsDataLoader",
        "args":{
            "data_dir": "data/dummy_data",
            "transform_config_file_path": "transform/configs/config_12092022.json",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "use_custom_collate_fn": true,
            "min_pred_func_freq": 0,
            "min_lex_pred_freq": 0,
            "filter_min_freq": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}